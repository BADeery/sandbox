<div class="articles-page-grid">
  {%- for post in postslist | reverse %}
    <article class="articles-page-card">
      <h2>
        <a href="{{ post.url }}">
          {% if post.data.icon %}
            <i data-lucide="{{ post.data.icon }}"></i>
          {% endif %}
          {{ post.data.title or post.url }}
        </a>
      </h2>

      {% if post.data.description %}
        <p class="articles-page-excerpt">{{ post.data.description }}</p>
      {% endif %}

      <div class="articles-page-flex-spacer"></div>

      {# <div class="articles-page-footer-meta-row">
        <span class="articles-page-date">
          <i data-lucide="calendar"></i>
          <time datetime="{{ post.date | htmlDateString }}">{{ post.date | auDate("dd MM yyyy") }}</time>
        </span>
        <span class="articles-page-read-time">
          <i data-lucide="clock"></i>
          {{ post.data.readingTime.text }}
        </span>
      </div> #}
    </article>
  {%- endfor %}
</div>
